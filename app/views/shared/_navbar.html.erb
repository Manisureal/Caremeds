<div class="navbar-wagon <%= yield(:navbar_class) %>">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right">

    <div class="hidden-xs hidden-sm">
        <%= link_to "Home", pages_home_path, class: "navbar-wagon-item navbar-wagon-link" %>
        <%= link_to "Pharmacy", pages_pharmacy_path, class: "navbar-wagon-item navbar-wagon-link" %>
        <%= link_to "Care Providers", pages_careproviders_path, class: "navbar-wagon-item navbar-wagon-link" %>
        <%= link_to "EMAR", pages_emar_path, class: "navbar-wagon-item navbar-wagon-link" %>
    </div>

    <div class="dropdown hidden-xs hidden-sm">
      <a class="navbar-wagon-item navbar-wagon-link" data-toggle="dropdown">More..<span class="caret"></span></a>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "Contact Us", pages_contactus_path %></li>
        <li><%= link_to "FAQs", pages_faqs_path %></li>
        <li class="divider"></li>
        <li class="dropdown-header">SYSTEM</li>
        <li><%= link_to "News", pages_news_path %></li>
        <li><%= link_to "Updates", pages_updates_path %></li>
      </ul>
    </div>

  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">

        <li> <%= link_to "My profile" %></li>
        <li> <%= link_to "Home" %></li>
        <li> <%= link_to "Log Out" %></li>

      </ul>
    </div>
  </div>
</div>
